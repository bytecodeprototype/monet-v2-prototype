                        img: "https://orient-watch.com/images/products/category/archive/AA02005D_0.png",
                    },
                };

                const NUMBER = "573014914532";
                const modal = document.getElementById("modalBackdrop");

                window.openProduct = function (id) {
                    const p = products[id];
                    if (!p) return;
                    document.getElementById("modalTitle").textContent = p.title;
                    document.getElementById("modalDesc").textContent = p.desc;
                    document.getElementById("modalBadge").innerHTML =
                        `<i class="fa-solid fa-tag"></i> ${p.badge}`;
                    document.getElementById("specCase").textContent =
                        p.specs.case;
                    document.getElementById("specMov").textContent =
                        p.specs.mov;
                    document.getElementById("specGlass").textContent =
                        p.specs.glass;
                    document.getElementById("modalMainImg").src = p.img;
                    document.getElementById("modalCta").href =
                        `https://wa.me/${NUMBER}?text=${encodeURIComponent(p.wa)}`;
                    modal.classList.add("active");
                    document.body.style.overflow = "hidden";
                };

                window.closeProduct = function () {
                    modal.classList.remove("active");
                    document.body.style.overflow = "auto";
                };

                modal.addEventListener("click", (e) => {
                    if (e.target === modal) closeProduct();
                });

                document.addEventListener("keydown", (e) => {
                    if (
                        e.key === "Escape" &&
                        modal.classList.contains("active")
                    )
                        closeProduct();
                });

                document.querySelectorAll("[data-wa]").forEach((el) => {
                    if (!el.id.includes("modal")) {
                        const text = encodeURIComponent(
                            el.getAttribute("data-wa"),
                        );
                        el.href = `https://wa.me/${NUMBER}?text=${text}`;
                    }
                });
            })();
