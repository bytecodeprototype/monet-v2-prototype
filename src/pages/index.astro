                (async function loadLegalContent() {
                    try {
                        const response = await fetch("/content/legal.json");
                        if (!response.ok) throw new Error("Failed to load");
                        legalContent = await response.json();
                    } catch (err) {
                        console.error("Error loading legal content:", err);
